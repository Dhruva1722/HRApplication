    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/woman" />


    <TextView
        android:id="@+id/emp_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profileImg"/>

    <TextView
        android:id="@+id/emp_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name@gmail.com"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emp_Name"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/border2"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emp_Email" />


    <TextView
        android:id="@+id/edit_Profile"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawableStart="@drawable/baseline_contact_page_24"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_below="@id/border2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/trip_Details"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawableStart="@drawable/baseline_map_24"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trip Details"
        android:layout_below="@id/edit_Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/leave_Status"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawableStart="@drawable/baseline_edit_calendar_24"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Status"
        android:layout_below="@id/trip_Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp" />
    </RelativeLayout>



</FrameLayout>




