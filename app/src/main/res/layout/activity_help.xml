<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity.HelpActivity"
    android:background="#77C5D9ED">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0039A9"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white" />


    <RelativeLayout
        android:id="@+id/firstList"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/loginbg">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/supportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/supportNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/supportName"/>

        <TextView
            android:id="@+id/supportCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City/State/Country"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/supportNum"/>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondList"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/firstList"
        android:background="@drawable/loginbg">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/supportName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/supportNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/supportName1"/>

        <TextView
            android:id="@+id/supportCity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City/State/Country"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/supportNum1"/>




    </RelativeLayout>



</RelativeLayout>